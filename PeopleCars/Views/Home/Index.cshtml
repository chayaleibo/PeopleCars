<div id="app" style="margin-top: 40px;">
    <div class="row">
        <button class="btn btn-primary" v-on:click="addClick">Add Person</button>
    </div>
    <div class="row">
        <table class="table table-striped table-bordered">
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Age</th>
                <th>Actions</th>
            </tr>
            <template v-for="p in people">
                <tr >
                    <td>{{p.firstName}}</td>
                    <td>{{p.lastName}}</td>
                    <td>{{p.age}}</td>
                    <td>
                        <div class="row">
                            <div class="col-md-2">
                                <button class="btn btn-info" v-on:click="addCarClick(p.id)">Add Car</button>
                            </div>
                            <div class="col-md-1">
                                <button class="btn btn-success" v-on:click="showCars(p.id)">Show Cars</button>
                            </div>
                        </div>
                    </td>
                </tr>
            </template>
        </table>

        <table v-if="carshasvalue" class="table table-bordered table-hover table-striped">
            <tr>
                <th>Make</th>
                <th>Model</th>
                <th>Year</th>
            </tr>

            <template v-for="car in cars">
                <tr>
                    <td>{{car.make}}</td>
                    <td>{{car.model}}</td>
                    <td>{{car.year}}</td>
                </tr>
            </template>

        </table>
    </div>
    <div tabindex="-1" role="dialog" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" data-dismiss="modal" aria-label="Close" class="close"><span aria-hidden="true">×</span></button>
                    <h4 class="modal-title">Modal title</h4>
                </div>
                <div class="modal-body" v-if ='isAddPersonModel'>
                    <input type="text" v-model="modal.FirstName" placeholder="First Name" class="form-control" /><br />
                    <input type="text" v-model="modal.LastName" placeholder="Last Name" class="form-control" /><br />
                    <input type="text" v-model="modal.Age" placeholder="Age" class="form-control" /><br />
                </div>
                <div class="modal-body" v-else>
                    <input type="text" v-model="car.Make" placeholder="Make" class="form-control" /><br />
                    <input type="text" v-model="car.Model" placeholder="Model" class="form-control" /><br />
                    <input type="text" v-model="car.Year" placeholder="Year" class="form-control" /><br />
                </div>
                <div class="modal-footer">
                    <button type="button" data-dismiss="modal" class="btn btn-default">Close</button>
                    <button type="button" v-if ="isAddPersonModel" class="btn btn-warning" v-on:click="savePerson">Add Person</button>
                    <button type="button" v-else class="btn btn-primary" v-on:click="saveCar">Add Car</button>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
 {    
    <script src="~/Scripts/vue.min.js"></script>
    <script src="~/Scripts/Index.js"></script>
 }